<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/workshop"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00009688">


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="170dp"
        android:layout_height="151dp"
        android:background="#00009688"
        android:src="@drawable/service"
        app:layout_constraintBottom_toTopOf="@+id/WorkshopF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.743" />

    <Button
        android:id="@+id/CustomerF"
        android:layout_width="353dp"
        android:layout_height="62dp"

        android:background="#009688"


        android:text="Customer"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.658" />

    <Button
        android:id="@+id/WorkshopF"
        android:layout_width="353dp"
        android:layout_height="62dp"

        android:background="#009688"

        android:text="Workshop"

        app:layout_constraintBottom_toTopOf="@+id/CustomerF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.946" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="342dp"
        android:layout_height="59dp"
        android:fontFamily="@font/allerta"
        android:lineSpacingExtra="14sp"
        android:text="  MOBILE CARS WORKSHOP"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="#D61B1B"
        android:textSize="24sp"
        android:textStyle="bold|italic"
        app:layout_constraintBottom_toTopOf="@+id/imageView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.492"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.652" />
</androidx.constraintlayout.widget.ConstraintLayout>